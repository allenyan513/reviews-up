{
  "extends": [
    "//"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build",
        "build:styles",
        "build:components",
        "build:embed"
      ]
    },
    "build:styles": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/styles/**"
      ]
    },
    "build:components": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/components/**"
      ]
    },
    "build:embed": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/embed/**"
      ]
    },
    "dev": {
      "with": [
        "dev:components",
        "dev:styles",
        "dev:embed"
      ]
    },
    "dev:styles": {
      "cache": false,
      "persistent": true
    },
    "dev:components": {
      "cache": false,
      "persistent": true
    },
    "dev:embed": {
      "cache": false
    }
  }
}
